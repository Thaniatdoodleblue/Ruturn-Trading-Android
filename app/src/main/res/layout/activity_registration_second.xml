<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.RegistrationFirstActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homePage"
        app:theme="@style/ToolbarStyle"
        app:title="Complete your profile"
        app:titleTextColor="@color/white">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BANK DETAILS"
                android:textColor="@color/blackText"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtAccntType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Account Type"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24px"
                        android:focusableInTouchMode="false"
                        android:hint="Bank Name"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtAccountNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="Account Number"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:digits="1234567890 "
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtAccountHolderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="Account Holder Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtBranchName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="Branch Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"

                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtBranhCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="Branch Code"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="RESIDENTIAL ADDRESS"
                android:textColor="@color/blackText"
                android:textSize="17sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtLine1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="Line 1"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtSuburb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="Suburb"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="City"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtProvince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24px"
                        android:focusableInTouchMode="false"
                        android:hint="Province"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:focusableInTouchMode="true"
                        android:hint="Code"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center|left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="4dp"
                    android:text="My postal address is the same"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vPostalLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="POSTAL ADDRESS"
                    android:textColor="@color/blackText"
                    android:textSize="17sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHint">

                        <EditText
                            android:id="@+id/vEdtTxtLine1Post"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusableInTouchMode="true"
                            android:hint="Line 1"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/black"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHint">

                        <EditText
                            android:id="@+id/vEdtTxtSuburbPost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusableInTouchMode="true"
                            android:hint="Suburb"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:textColorHint="@color/black"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHint">

                        <EditText
                            android:id="@+id/vEdtTxtCityPost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusableInTouchMode="true"
                            android:hint="City"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:textColorHint="@color/black"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHint">

                        <EditText
                            android:id="@+id/vEdtTxtProvincePost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:cursorVisible="false"
                            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24px"
                            android:focusableInTouchMode="false"
                            android:hint="Province"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:textColorHint="@color/black"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/MyHint">

                        <EditText
                            android:id="@+id/vEdtTxtCodePost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:focusableInTouchMode="true"
                            android:hint="Code"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:textColorHint="@color/black"
                            android:theme="@style/MyEditText" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/MyHint">

                    <EditText
                        android:id="@+id/vEdtTxtMarketingChannel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:cursorVisible="false"
                        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24px"
                        android:focusableInTouchMode="false"
                        android:hint="How did you find out about us?"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:textColorHint="@color/black"
                        android:theme="@style/MyEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/vTxtagreeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="4dp"
                    android:text="I agree Terms and Conditions."
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <Button
                    android:id="@+id/vBtnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/homePage"
                    android:text="SUBMIT"
                    android:textColor="@color/white"

                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
