<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:src="@drawable/ic_view_notification" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ispum"
                android:textSize="18sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:autoLink="all"
                android:maxLines="3"
                android:text="I am trying to implement the SearchView from the support library. I want the user to be to use the SearchView to filter a List of movies in a RecyclerView."
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorDarkGray"
                android:textSize="13sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:autoLink="all"
                android:maxLines="6"
                android:text="click here: www.google.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorDarkGray"
                android:textSize="13sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="see more >>"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/homePage"
                android:textSize="11sp"
                android:typeface="sans"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/grey" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>