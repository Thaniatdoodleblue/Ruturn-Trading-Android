<resources>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/homePage</item>
        <item name="actionBarStyle">@style/Theme.AppLib.ActionBar.Solid</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="AppTheme.Base">

    </style>


    <style name="animationCentreZoomInZoomOut" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/zoom_in_center</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_center</item>
    </style>

